void SystemClock_Config(void) {

	// PWR Scale 1
	RCC->APB1ENR |= RCC_APB1ENR_PWREN;
	MODIFY_REG(PWR->CR, PWR_CR_VOS, (PWR_REGULATOR_VOLTAGE_SCALE1));

	// HSE
	RCC->CR |= RCC_CR_HSEON; // HSE on
	while(READ_BIT(RCC->CR, RCC_CR_HSERDY) == 0U); // wait until HSE is stable

	// PLL
	// Clear only PLL fields, preserve reserved bits
	RCC->PLLCFGR &= ~(RCC_PLLCFGR_PLLM_Msk |
	                  RCC_PLLCFGR_PLLN_Msk |
	                  RCC_PLLCFGR_PLLP_Msk |
	                  RCC_PLLCFGR_PLLQ_Msk |
	                  RCC_PLLCFGR_PLLSRC);

	// Write new PLL values
	RCC->PLLCFGR |= (8U << RCC_PLLCFGR_PLLM_Pos)   // PLLM = 8
	              | (384U << RCC_PLLCFGR_PLLN_Pos) // PLLN = 384
	              | (1U << RCC_PLLCFGR_PLLP_Pos)   // PLLP = 4
	              | (8U << RCC_PLLCFGR_PLLQ_Pos)   // PLLQ = 8
	              | RCC_PLLCFGR_PLLSRC_HSE;       // PLL source = HSE

	// ✅ FIX: Configure Flash wait states + caches BEFORE switching SYSCLK
	FLASH->ACR = FLASH_ACR_ICEN | FLASH_ACR_DCEN | FLASH_ACR_PRFTEN | FLASH_ACR_LATENCY_3WS;

	// ✅ FIX: Configure AHB/APB prescalers BEFORE switching SYSCLK
	RCC->CFGR &= ~(RCC_CFGR_HPRE | RCC_CFGR_PPRE1 | RCC_CFGR_PPRE2);
	RCC->CFGR |= RCC_CFGR_HPRE_DIV1 | RCC_CFGR_PPRE1_DIV2 | RCC_CFGR_PPRE2_DIV1;

	// Enable PLL
	RCC->CR |= RCC_CR_PLLON;
	while((RCC->CR & RCC_CR_PLLRDY) == 0U);  // wait until PLL ready

	// Select PLL as SYSCLK
	RCC->CFGR &= ~RCC_CFGR_SW;        // clear SW bits
	RCC->CFGR |= RCC_CFGR_SW_PLL;     // set SW = 10 (PLL as system clock)

	// Wait until PLL is actually used as SYSCLK
	while ((RCC->CFGR & RCC_CFGR_SWS) != RCC_CFGR_SWS_PLL);

	// I2S

	// Configure PLLI2S
	RCC->PLLI2SCFGR =
	    (258U << RCC_PLLI2SCFGR_PLLI2SN_Pos) |   // PLLI2SN = 258
	    (3U   << RCC_PLLI2SCFGR_PLLI2SR_Pos);    // PLLI2SR = 3

	RCC->CR |= RCC_CR_PLLI2SON;                  // Enable PLLI2S
	while ((RCC->CR & RCC_CR_PLLI2SRDY) == 0U);   // Wait until ready

	// ✅ FIX: Enable SPI2 peripheral clock before touching registers
	RCC->APB1ENR |= RCC_APB1ENR_SPI2EN;

	// Configure I2S prescaler
	SPI2->I2SCFGR &= ~SPI_I2SCFGR_I2SE; // disable I²S before config

	SPI2->I2SPR =
	    (0U << SPI_I2SPR_ODD_Pos) |   // ODD = 0
	    (7U << SPI_I2SPR_I2SDIV_Pos); // I2SDIV = 7

	// Optional: leave MCKOE=0, PCM5102 doesn’t need MCLK

	SPI2->I2SCFGR =
	    SPI_I2SCFGR_I2SMOD |                // I²S mode
	    (0b10U << SPI_I2SCFGR_I2SCFG_Pos) | // Master Transmit
	    (0b00U << SPI_I2SCFGR_I2SSTD_Pos) | // Philips I²S standard
	    (0b10U << SPI_I2SCFGR_DATLEN_Pos) | // 24-bit data
	    (0b1U  << SPI_I2SCFGR_CHLEN_Pos);   // 32-bit channel length

	SPI2->I2SCFGR |= SPI_I2SCFGR_I2SE; // enable I²S
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

