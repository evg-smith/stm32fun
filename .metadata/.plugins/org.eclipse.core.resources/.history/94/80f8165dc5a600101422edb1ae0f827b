#include "lcd_lib.h"

void write_bits(uint16_t bits) {
	HAL_GPIO_WritePin(GPIOA, RS_Pin, (bits >> 9) & 1);
	HAL_GPIO_WritePin(GPIOA, RW_Pin, (bits >> 8) & 1);

	HAL_GPIO_WritePin(GPIOA, D7_Pin, (bits >> 7) & 1);
	HAL_GPIO_WritePin(GPIOA, D6_Pin, (bits >> 6) & 1);
	HAL_GPIO_WritePin(GPIOA, D5_Pin, (bits >> 5) & 1);
	HAL_GPIO_WritePin(GPIOA, D4_Pin, (bits >> 4) & 1);

	HAL_Delay(1);
	HAL_GPIO_WritePin(GPIOA, EN_Pin, 1);
	HAL_Delay(1);
	HAL_GPIO_WritePin(GPIOA, EN_Pin, 0);
	HAL_Delay(1);

	HAL_GPIO_WritePin(GPIOA, D7_Pin, (bits >> 3) & 1);
	HAL_GPIO_WritePin(GPIOA, D6_Pin, (bits >> 2) & 1);
	HAL_GPIO_WritePin(GPIOA, D5_Pin, (bits >> 1) & 1);
	HAL_GPIO_WritePin(GPIOA, D4_Pin, (bits >> 0) & 1);

	HAL_Delay(1);
	HAL_GPIO_WritePin(GPIOA, EN_Pin, 1);
	HAL_Delay(1);
	HAL_GPIO_WritePin(GPIOA, EN_Pin, 0);
	HAL_Delay(1);
}

void LCD_Init(void) {
	HAL_GPIO_WritePin(GPIOA, RS_Pin, 0);
		HAL_GPIO_WritePin(GPIOA, RW_Pin, 0);

		HAL_Delay(50);

		// Manual nibble sends for reset (D7=0, D6=0, D5=1, D4=1 = 0x3)
		HAL_GPIO_WritePin(GPIOA, D7_Pin, 0);
		HAL_GPIO_WritePin(GPIOA, D6_Pin, 0);
		HAL_GPIO_WritePin(GPIOA, D5_Pin, 1);
		HAL_GPIO_WritePin(GPIOA, D4_Pin, 1);
		HAL_GPIO_WritePin(GPIOA, EN_Pin, 1);
		HAL_Delay(1);
		HAL_GPIO_WritePin(GPIOA, EN_Pin, 0);
		HAL_Delay(5);

		// Second time
		HAL_GPIO_WritePin(GPIOA, EN_Pin, 1);
		HAL_Delay(1);
		HAL_GPIO_WritePin(GPIOA, EN_Pin, 0);
		HAL_Delay(1);

		// Third time
		HAL_GPIO_WritePin(GPIOA, EN_Pin, 1);
		HAL_Delay(1);
		HAL_GPIO_WritePin(GPIOA, EN_Pin, 0);
		HAL_Delay(1);

		// Switch to 4-bit (D7=0, D6=0, D5=1, D4=0 = 0x2)
		HAL_GPIO_WritePin(GPIOA, D5_Pin, 0);
		HAL_GPIO_WritePin(GPIOA, EN_Pin, 1);
		HAL_Delay(1);
		HAL_GPIO_WritePin(GPIOA, EN_Pin, 0);
		HAL_Delay(1);

		// YOUR ORIGINAL WORKING CODE FROM HERE:
		write_bits(0b00100000); // 4-bit mode
		write_bits(0b00000001); // clear display
		HAL_Delay(2);
		write_bits(0b00000010); // return home
		HAL_Delay(2);
		write_bits(0b00001100); // display on, no cursor
}

void write_char(char c) {
	write_bits((0b10 << 8) | c);
}

void write_string(const char *str) {
    while (*str != '\0') {
        write_char(*str);
        str++;
    }
}
